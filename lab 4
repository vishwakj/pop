#include<stdio.h>
int main()
{ 
	int i,j,n;
	printf("Input number of rows: \n");
	scanf ("%d",&n);
	for (i=1;i<=n;i++)// a represents row-no
	{
		// printing spaces
		for (j=1;j<=n-i;j++)
		  printf("  ");
		// printing number from 1 to row-no in incresing order
		for (j=1;j<=i;j++)
		  printf("%d ",j);
		// printing numbers from row-no down to 1 indecresing order
		for (j=i-1;j>=1;j--)
		  printf("%d ",j);
		printf("\n");
		
	}
}
